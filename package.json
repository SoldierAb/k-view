{
  "name": "@cgj/k-view",
  "version": "1.3.0",
  "main": "./lib/kview/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config=./build/webpack.dev.js --open --theme=default",
    "build": "cross-env NODE_ENV=production webpack  --config=./build/webpack.pub.js",
    "demo": "webpack --config=./build/webpack.demo.js --theme=default",
    "lint": "eslint --ext .js,.vue src examples --fix",
    "test": "npm run build && jest --coverage",
    "test:watch": "npm run build && jest --coverage --watchAll",
    "release": "standard-version",
    "commit": "git add . && git-cz",
    "postinstall": "node scripts/post-install || echo \"ignore\""
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/test/vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gitHooks": {
    "pre-commit": "npm run lint && git add .",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "email": "ab140140@163.com",
  "keywords": [
    "eleme",
    "vue",
    "components"
  ],
  "author": "cgj",
  "license": "MIT",
